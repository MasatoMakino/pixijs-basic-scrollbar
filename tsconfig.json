{
  "compilerOptions": {
    "lib": ["ES2021", "dom"],
    "module": "Node16",
    "target": "ES2021",
    "moduleResolution": "Node16",
    "outDir": "./esm",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "mini-signals": ["./node_modules/resource-loader/typings/mini-signals.d.ts"]
    },
    "strict": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__test__"]
}
