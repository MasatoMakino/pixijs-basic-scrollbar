{
  "name": "@masatomakino/pixijs-basic-scrollbar",
  "version": "0.3.1",
  "description": "Scrollbar modules for pixi.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/pixijs-basic-scrollbar.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@masatomakino/pixijs-basic-button": "^0.3.0"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.5.3",
    "@masatomakino/gulptask-dev-server": "^0.4.2",
    "@tweenjs/tween.js": "^18.6.4",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "canvas": "^2.10.2",
    "dat.gui": "^0.7.9",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "pixi.js": "^7.0.4",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "@tweenjs/tween.js": ">=18.5.0 <19.0.0",
    "pixi.js": ">=7.o.0 <8.0.0"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo && npm run typedocs",
    "demo": "npx @masatomakino/gulptask-demo-page",
    "buildTS": "npx tsc --project tsconfig.cjs.json & npx tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx @masatomakino/gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.cjs.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/pixijs-basic-scrollbar/issues"
  },
  "homepage": "https://github.com/MasatoMakino/pixijs-basic-scrollbar#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
